<%- include("../partials/header")-%>

    <div class="login pt-5">
        <h3>通过支票转账</h3>
        <br>
        <form method="POST" action="/emp/addcheck">
            <div class="form-group">
            <label for="exampleInputEmail1">From</label>
            <input type="number" required class="form-control" required value="" name="check[from]" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">To</label>
                <input type="number" required class="form-control" required value="" name=check[to]" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">支票编号</label>
                <input type="Text" required class="form-control" required value="" name="check[checkno]" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">数量</label>
                <input type="number" required class="form-control" required value="" name="check[amount]" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <button type="submit" class="btn btn-primary">添加</button>
          </form>
    </div>

    
<%- include("../partials/footer")-%>
