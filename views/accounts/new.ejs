<%- include("../partials/header")-%>

    <div class="login pt-5">
        <h3>添加新帐户</h3>
        <br>
        
        <form method="POST" action="/cus/profile/acc">
            <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" class="form-control" name="account[email]" required id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">全名</label>
                <input type="text" class="form-control" name="account[accountname]" required  id="exampleInputEmail1" aria-describedby="emailHelp">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">分行</label>
                <select class="custom-select" name="account[branch]" required  id="inputGroupSelect01">
                  <option selected>Choose...</option>
                  <option value="Vellore">Vellore</option>
                  <option value="Chennai">Chennai</option>
                </select>
              </div>

              <div class="form-group">
                <label for="exampleInputPassword1">帐户类型</label>
                <select class="custom-select" name="account[accounttype]" required  id="inputGroupSelect01">
                  <option selected>Choose...</option>
                  <option value="savings">储蓄</option>
                </select>
              </div>

              <div class="form-group">
                <label for="exampleInputPassword1">Pin码</label>
                <input type="password" class="form-control" name="account[pin]" required  id="exampleInputPassword1">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">手机号码</label>
                <input type="number" class="form-control" name="account[mobile]"  required id="exampleInputPassword1">
              </div>
            <!-- <div class="form-group">
              <label for="exampleInputPassword1">Adhaar Number</label>
              <input type="number" class="form-control" name="account[adhaar]"  required id="exampleInputPassword1">
            </div> -->
            <div class="form-group">
              <label for="exampleFormControlTextarea1">地址</label>
              <textarea name="account[address]" class="form-control"  required id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="form-group">
              <label for="exampleFormControlTextarea1">余额</label>
              <input type="number" name="account[balance]" class="form-control"  placeholder="in rupees"  required id="exampleInputPassword1">

            </div>
            
            <button type="submit" class="btn btn-primary">申请账户</button>
          
          </form>
    </div>

    
<%- include("../partials/footer")-%>
