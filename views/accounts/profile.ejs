<%- include("../partials/header")-%>
<div class="container mt-5">


    <div class="row">
        <div class="col-sm-12">
            <div class="jumbotron">
                <a href="" class="btn btn-success float-right" style="color:white">Edit</a>
                <div class="accdetails">
                    <strong>Email</strong>: <%= user.email%>
                </div>
                <div class="accdetails">
                    <strong>手机号码</strong>: <%= user.mobile%>
                </div>
                <div class="accdetails">
                    <strong>姓名</strong>: <%= user.username%>
                </div>
                <div class="accdetails">
                    <strong>地址</strong>: <%= user.address%>
                </div>
                <div class="accdetails">
                    <strong>性别</strong>: <%= user.gender%>
                </div>
                <div class="accdetails">
                    <strong>出生日期</strong>: <%= user.dob.getDate()%>/<%= user.dob.getMonth()%>/<%= user.dob.getFullYear()%>
                </div>
                <div class="accdetails">
                    <strong>身份证</strong>: <%= user.adhaar%>
                </div>
            </div>
        </div>
    </div>
    <%if(user.account){%>

    <div class="addacc">
        <a href="/cus/profile/acc/new" class="btn btn-success mt-3 mr-3">创建一个新账户</a>        
        <!-- <a href="" class="btn btn-primary mt-3 mr-3">Create a new account</a>         -->
    </div>
   
    <div class="row">
        <% user.account.forEach(function(account){%>
            <div class="col-md-3 mt-3">
                <div class="card p-3 text-center">
                    
                 
                        <strong>账号</strong>:<%= account.accountno%>
             
            
                        <strong>用户名</strong>: <%= account.accountname%>
               
               
                        <strong>分行</strong>: <%= account.branch%>
                 

                  <% if(account.isAccepted){%>
                  <a href="/cus/profile/acc/<%= account._id%>" class=" mt-3 btn btn-primary">展示</a>
                  <%} else{%>
                    <a href="" class="mt-3 btn btn-primary disabled">尚未通过</a>
                    <%}%>
                </div>
            </div>
       <% })}%>

    </div>
</div>   
    
<%- include("../partials/footer")-%>
